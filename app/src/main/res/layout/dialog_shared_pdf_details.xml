<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/matt_200"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:background="@color/matt_200"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogSharedWithMeFilenameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="1dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingStart="22dp"
            android:paddingEnd="38dp"
            android:text="Quantum Physics.pdf"
            android:textColor="@color/white_100"
            android:textSize="16sp">

        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogSharedWithMeNameTxt"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/baseline_people_outline_24"
            android:drawablePadding="18dp"
            android:drawableTint="@color/white_100"
            android:focusable="true"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingStart="22dp"
            android:paddingTop="10dp"
            android:paddingEnd="38dp"
            android:paddingBottom="10dp"
            android:text="Anubhav_PS"
            android:textColor="@color/white_100"
            android:textSize="14sp">

        </com.google.android.material.textview.MaterialTextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:background="#3E3E3E" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogSharedWithMeCommentTxt"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/baseline_comment_24"
            android:drawablePadding="18dp"
            android:drawableTint="@color/white_100"
            android:focusable="true"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingStart="22dp"
            android:paddingTop="10dp"
            android:paddingEnd="38dp"
            android:paddingBottom="10dp"
            android:text="Comment"
            android:textColor="@color/white_100"
            android:textSize="14sp">

        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogSharedWithMeRemoveTxt"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/baseline_delete_24"
            android:drawablePadding="18dp"
            android:drawableTint="@color/white_100"
            android:focusable="true"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingStart="22dp"
            android:paddingTop="10dp"
            android:paddingEnd="38dp"
            android:paddingBottom="10dp"
            android:text="Remove"
            android:textColor="@color/white_100"
            android:textSize="14sp">

        </com.google.android.material.textview.MaterialTextView>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>