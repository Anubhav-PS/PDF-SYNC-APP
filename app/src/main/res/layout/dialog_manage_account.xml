<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#1D1D1D"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/dialogAccountCloseBtn"
                    style="@style/ForArrowTheme"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/baseline_close_24"
                    app:tint="@color/white_100">

                </ImageView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:fontFamily="@font/jost_medium_italic"
                    android:gravity="center"
                    android:paddingEnd="24dp"
                    android:text="Account"
                    android:textColor="@color/olive_200"
                    android:textSize="26sp"
                    app:fontFamily="@font/roboto_medium">

                </com.google.android.material.textview.MaterialTextView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#1D1D1D"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_round_account_circle_24"
                        android:backgroundTint="@color/white_100">

                    </ImageView>


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dialogAccountUsernameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Anubhav PS"
                    android:textColor="@color/white_100">

                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dialogAccountUserMailIdTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="anubhav.personal.id@gmail.com"
                    android:textColor="@color/text_grey_1">

                </com.google.android.material.textview.MaterialTextView>


            </LinearLayout>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogAccountSignOutBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="3dp"
            android:elevation="0dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Sign Out"
            android:textAllCaps="false"
            android:textColor="@color/matt_100"
            android:textSize="10sp"
            app:backgroundTint="@color/blue_200"
            app:cornerRadius="30dp"
            app:elevation="0dp"
            app:strokeColor="#CBEDF1"
            app:strokeWidth="1.2dp">

        </com.google.android.material.button.MaterialButton>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"
            android:background="@color/text_grey_1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogAccountEditProfileTxt"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/baseline_mode_edit_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/white_100"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:paddingStart="38dp"
            android:paddingEnd="16dp"
            android:text="Edit profile"
            android:textColor="@color/white_100"
            android:textSize="14sp"
            app:drawableTint="@color/white_100"
            app:fontFamily="@font/roboto" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogAccountRecycleBinTxt"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/baseline_delete_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/white_100"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:paddingStart="38dp"
            android:paddingEnd="16dp"
            android:text="Recycle Bin"
            android:textColor="@color/white_100"
            android:textSize="14sp"
            app:drawableTint="@color/white_100"
            app:fontFamily="@font/roboto" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:background="@color/text_grey_1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogAccountShareAppTxt"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/ic_baseline_share_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/white_100"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:paddingStart="38dp"
            android:paddingEnd="16dp"
            android:text="Share the app"
            android:textColor="@color/white_100"
            android:textSize="14sp"
            app:drawableTint="@color/white_100"
            app:fontFamily="@font/roboto" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogAccountAboutAppTxt"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/white_100"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:paddingStart="38dp"
            android:paddingEnd="16dp"
            android:text="About the app"
            android:textColor="@color/white_100"
            android:textSize="14sp"
            app:drawableTint="@color/white_100"
            app:fontFamily="@font/roboto" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogAccountSendFeedbackTxt"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/ic_baseline_feedback_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/white_100"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:paddingStart="38dp"
            android:paddingEnd="16dp"
            android:text="Send feedback"
            android:textColor="@color/white_100"
            android:textSize="14sp"
            app:drawableTint="@color/white_100"
            app:fontFamily="@font/roboto" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="2dp"
            android:background="@color/text_grey_1" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogAccountAppVersionTxt"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:padding="4dp"
            android:text="Version  1.1.2"
            android:textColor="@color/white_100"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>